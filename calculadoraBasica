pragma solidity 0.8.26;

contract CalculadoraBasica {

    function suma(uint a, uint b) public pure returns(uint){ //pure es por   son variables dentro de la funcion (locales)
        return  a + b;  
    }
    function resta(uint a, uint b) public pure returns(uint){
        return  a - b;  
    }
    function multiplicacion(uint a, uint b) public pure returns(uint){
        return  a * b;  
    }
    function division(uint a, uint b) public pure returns(uint){
        return  a / b;  
    }
}
